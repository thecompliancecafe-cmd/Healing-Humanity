              <div className="absolute inset-0 bg-gradient-to-br from-emerald-500/10 via-transparent to-sky-500/10 pointer-events-none" />
              <div className="text-7xl mb-8 animate-[bounce_2s_infinite]">üéÅ</div>
              <h3 className="text-3xl font-bold text-slate-900 mb-3 font-serif tracking-tight">Sui Hypercert Claim</h3>
              {user.levelInfo.currentLevel >= 5 ? (
                <>
                  <p className="text-slate-400 text-xs font-bold uppercase tracking-widest mb-10 leading-relaxed">Mint your unique proof-of-impact object directly on the Sui Mainnet.</p>
                  <button className="w-full bg-sky-600 py-5 rounded-2xl font-black text-white shadow-xl shadow-sky-200 uppercase tracking-widest hover:bg-sky-700 transition-colors">Mint Hypercert</button>
                </>
              ) : (
                <>
                  <p className="text-slate-400 text-[10px] font-black uppercase tracking-widest mb-10 leading-relaxed">Reach Level 5 to unlock outcome-based hypercerts. Continue your journey, Guardian.</p>
                  <button onClick={() => setShowMysteryBox(false)} className="w-full border border-sky-100 py-4 rounded-xl font-black text-slate-400 hover:bg-slate-50 transition-colors uppercase tracking-widest text-xs">Return to Map</button>
                </>
              )}
           </div>
        </div>
      )}
    </div>
  );
};

export default GamificationHub;
