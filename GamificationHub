    setJoinRequestingId(clanId);
    // Simulate Sui Network membership proposal
    setTimeout(() => {
      alert(`Membership Proposal for ${MOCK_TEAMS.find(t => t.id === clanId)?.name} sent! Waiting for Clan Captain approval.`);
      setJoinRequestingId(null);
    }, 1500);
