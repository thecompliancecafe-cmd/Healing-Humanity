                         <div className="absolute -top-3 right-4 bg-gradient-to-r from-sky-500 to-indigo-600 text-white text-[9px] font-black px-3 py-1 rounded-full flex items-center gap-1.5 shadow-lg z-20 uppercase tracking-widest">
                            <ShieldAlert className="w-3 h-3 fill-current" /> SUI Match Active
