                  <Zap className="w-3 h-3 fill-current" />
                  Level {user.levelInfo.currentLevel}
               </div>
               <div className="absolute -top-4 -left-4 bg-white p-2 rounded-xl shadow-lg border border-sky-100 w-32 text-center text-[10px] text-slate-500 font-bold flex flex-col items-center">
                  <span className="text-xs text-sky-600">Evolution:</span>
                  <span className="text-slate-900 font-black uppercase tracking-widest">{user.avatarType}</span>
               </div>
            </div>

            {/* Stats & Progress */}
            <div className="flex-grow text-center lg:text-left">
               <div className="flex items-center justify-center lg:justify-start gap-3 mb-2">
                  <h2 className="text-3xl font-bold text-slate-900 font-serif flex items-center gap-2">
                     {user.levelInfo.title} <Sparkles className="w-5 h-5 text-amber-500 animate-pulse" />
                  </h2>
                  <div className="flex gap-2">
                    <span className="bg-amber-50 text-amber-600 text-[10px] font-black px-2 py-0.5 rounded border border-amber-100 flex items-center gap-1 uppercase">
                        <Flame className="w-3 h-3 fill-current" /> {user.streakDays} Day Streak
                    </span>
                    <span className="bg-sky-50 text-sky-600 text-[10px] font-black px-2 py-0.5 rounded border border-sky-100 flex items-center gap-1 uppercase">
                        <ShieldCheck className="w-3 h-3" /> {user.trustMultiplier}x Multiplier
                    </span>
                  </div>
               </div>
               <p className="text-slate-500 mb-6 font-medium">Your <span className="text-sky-600">Sui Guardian</span> status grants a 15% yield bonus on all impact XP generated.</p>
               
               <div className="w-full bg-slate-100 h-4 rounded-full overflow-hidden shadow-inner relative">
                  <div 
                    className="h-full bg-gradient-to-r from-sky-500 via-indigo-500 to-emerald-500 relative transition-all duration-1000"
                    style={{ width: `${xpPercentage}%` }}
                  >
                     <div className="absolute inset-0 bg-white/20 animate-[shimmer_2s_infinite]" />
                  </div>
               </div>
               <div className="flex justify-between text-[10px] font-black mt-2 text-slate-400 uppercase tracking-widest">
                  <span>{user.levelInfo.currentXp} / {user.levelInfo.nextLevelXp} XP</span>
                  <span className="text-sky-600">Global Rank: #124</span>
               </div>
            </div>

            {/* Mystery Box Interaction */}
            <div 
              onClick={() => setShowMysteryBox(true)}
              className="bg-sky-950 text-white p-5 rounded-2xl min-w-[200px] shadow-xl text-center cursor-pointer hover:scale-105 active:scale-95 transition-all group relative border border-sky-800"
            >
               {user.levelInfo.currentLevel >= 5 && <div className="absolute -top-2 -right-2 bg-red-500 text-white text-[8px] font-bold px-1.5 py-0.5 rounded-full animate-bounce">1</div>}
               <div className="w-12 h-12 bg-white/10 rounded-full flex items-center justify-center mx-auto mb-3 text-2xl group-hover:rotate-12 transition-transform">
                  <Box className="w-6 h-6 text-sky-400" />
               </div>
               <div className="text-xs font-black text-sky-400 uppercase mb-1 tracking-widest">Sui Hypercert Box</div>
               <div className="font-bold text-xs uppercase tracking-tight">
                 {user.levelInfo.currentLevel >= 5 ? 'CLAIM NOW' : `Unlock at LVL 5`}
               </div>
            </div>
         </div>
      </div>

      {/* Tabs Menu */}
      <div className="flex bg-white rounded-2xl p-1 border border-sky-100 shadow-sm max-w-2xl mx-auto">
