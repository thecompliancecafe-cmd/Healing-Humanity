                            <span className={`text-xs font-black w-4 text-center ${team.rank === 1 ? 'text-amber-500 scale-125' : 'text-slate-300'}`}>#{team.rank}</span>
                            <div className="w-10 h-10 bg-slate-50 rounded-xl flex items-center justify-center text-xl shadow-inner group-hover:bg-sky-50 transition-colors">{team.avatar}</div>
                            <div>
                               <div className="text-xs font-black text-slate-800 group-hover:text-sky-600 transition-colors uppercase tracking-tight">{team.name}</div>
                               <div className="text-[9px] text-slate-400 font-bold uppercase tracking-widest">Global Rank</div>
                            </div>
                         </div>
                      </div>
                   ))}
