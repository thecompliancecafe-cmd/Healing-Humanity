                      <h4 className="font-bold text-slate-900 group-hover:text-sky-600 transition-colors uppercase text-sm tracking-tight">{quest.title}</h4>
                      <p className="text-[10px] text-slate-500 font-black uppercase tracking-widest">{quest.description}</p>
                    </div>
                  </div>
                  <div className="text-right">
                    <div className="text-sky-600 font-black text-xs">+{quest.xpReward} XP</div>
                  </div>
