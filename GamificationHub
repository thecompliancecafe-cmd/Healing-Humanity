
import React, { useState } from 'react';
import { UserProfile, Quest, ImpactTeam } from '../types';
import { MOCK_TEAMS, MOCK_GEO_RANKINGS, MOCK_CHALLENGES } from '../services/mockData.ts';
import { Map as MapIcon, Zap, Award, Flame, Lock, CheckCircle2, Trophy, ArrowUpRight, Users, Globe, Box, Target, TrendingUp, Sparkles, Navigation, ShieldCheck, Coins, ShieldAlert, ChevronDown, UserPlus, Info, RefreshCcw } from 'lucide-react';

interface GamificationHubProps {
  user: UserProfile;
}

const GamificationHub: React.FC<GamificationHubProps> = ({ user }) => {
  const [activeTab, setActiveTab] = useState<'map' | 'quests' | 'clans' | 'social'>('clans');
  const [showMysteryBox, setShowMysteryBox] = useState(false);
  const [expandedClanId, setExpandedClanId] = useState<string | null>(user.team?.id || null);
  const [joinRequestingId, setJoinRequestingId] = useState<string | null>(null);

